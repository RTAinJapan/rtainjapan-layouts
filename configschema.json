{
	"$schema": "http://json-schema.org/draft-04/schema",

	"type": "object",
	"additionalProperties": false,
	"properties": {
		"obs": {
			"type": "object",
			"properties": {
				"address": {"type": "string"},
				"password": {"type": "string"}
			},
			"additionalProperties": false,
			"required": ["address", "password"]
		},
		"tracker": {
			"type": "object",
			"additionalProperties": false,
			"required": ["url"],
			"properties": {
				"url": {"type": "string"}
			}
		},
		"colorTheme": {
			"type": "string",
			"enum": ["blue", "brown"],
			"default": "brown"
		},
		"hasSponsor": {"type": "boolean", "default": true},
		"twitter": {
			"type": "object",
			"additionalProperties": false,
			"required": [
				"targetWords",
				"consumerKey",
				"consumerSecret",
				"accessToken",
				"accessTokenSecret"
			],
			"properties": {
				"targetWords": {
					"type": "array",
					"items": {"type": "string"}
				},
				"consumerKey": {"type": "string"},
				"consumerSecret": {"type": "string"},
				"accessToken": {"type": "string"},
				"accessTokenSecret": {"type": "string"}
			}
		},
		"spotify": {
			"type": "object",
			"additionalProperties": false,
			"required": ["clientId", "clientSecret"],
			"properties": {
				"clientId": {"type": "string"},
				"clientSecret": {"type": "string"}
			}
		},
		"spreadsheetId": {"type": "string"},
		"googleApiKey": {"type": "string"},
		"oengus": {
			"type": "object",
			"additionalProperties": false,
			"required": ["token", "commentatorSheet", "additionalGameInfoSheet"],
			"properties": {
				"token": {"type": "string"},
				"commentatorSheet": {"type": "string"},
				"additionalGameInfoSheet": {"type": "string"}
			}
		}
	}
}
