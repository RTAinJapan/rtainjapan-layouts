{
	"$schema": "http://json-schema.org/draft-04/schema",

	"type": "object",
	"additionalProperties": false,
	"default": {},
	"properties": {
		"isOnsite": {"type": "boolean"},
		"obs": {
			"type": "object",
			"properties": {
				"address": {"type": "string"},
				"password": {"type": "string"}
			},
			"additionalProperties": false,
			"required": ["address", "password"]
		},
		"tracker": {
			"type": "object",
			"additionalProperties": false,
			"required": ["domain", "event", "secure"],
			"properties": {
				"domain": {"type": "string"},
				"event": {"type": "number"},
				"websocket": {"type": "string"},
				"secure": {"type": "boolean", "default": true}
			}
		},
		"twitch": {
			"type": "object",
			"properties": {
				"channelName": {"type": "string"},
				"clientId": {"type": "string"},
				"clientSecret": {"type": "string"}
			},
			"required": ["channelName", "clientId", "clientSecret"],
			"additionalProperties": false
		},
		"twitter": {
			"type": "object",
			"additionalProperties": false,
			"required": [
				"targetWords",
				"consumerKey",
				"consumerSecret",
				"accessToken",
				"accessTokenSecret"
			],
			"properties": {
				"targetWords": {
					"type": "array",
					"items": {"type": "string"}
				},
				"consumerKey": {"type": "string"},
				"consumerSecret": {"type": "string"},
				"accessToken": {"type": "string"},
				"accessTokenSecret": {"type": "string"}
			}
		},
		"spotify": {
			"type": "object",
			"additionalProperties": false,
			"required": ["clientId", "clientSecret"],
			"properties": {
				"clientId": {"type": "string"},
				"clientSecret": {"type": "string"}
			}
		},
		"music": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"textPrefix": {"type": "string", "default": ""},
				"textSuffix": {"type": "string", "default": ""}
			}
		},
		"googleApiKey": {"type": "string"},
		"commentatorSheet": {"type": "string"},
		"endCredit": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"staff": {
					"type": "array",
					"items": {"type": "string"},
					"default": []
				},
				"partners": {
					"type": "array",
					"items": {"type": "string"},
					"default": []
				},
				"volunteers": {
					"type": "array",
					"items": {"type": "string"},
					"default": []
				},
				"specialThanks": {
					"type": "array",
					"items": {"type": "string"},
					"default": []
				},
				"text": {
					"type": "array",
					"items": {"type": "string"},
					"default": []
				}
			},
			"required": ["staff", "partners", "volunteers"]
		},
		"preventVideoStop": {"type": "boolean", "default": false},
		"checklist": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"donationEnabled": {"type": "boolean", "default": true}
	}
}
