{
	"$schema": "http://json-schema.org/draft-04/schema",

	"type": "object",
	"additionalProperties": false,
	"properties": {
		"pk": {"type": "number"},
		"index": {"type": "number"},
		"title": {"type": "string"},
		"englishTitle": {"type": "string"},
		"category": {"type": "string"},
		"platform": {"type": "string"},
		"releaseYear": {"oneOf": [{"type": "integer"}, {"type": "null"}]},
		"runDuration": {"type": "string"},
		"setupDuration": {"type": "string"},
		"camera": {
			"type": "boolean",
			"description": "ゲーム全体でのカメラ使用有無"
		},
		"runners": {
			"type": "array",
			"items": {"$ref": "participant.json"}
		},
		"commentators": {
			"type": "array",
			"items": {"$ref": "participant.json"}
		},
		"twitchGameId": {
			"type": "string"
		},
		"completedChecklist": {
			"type": "array",
			"items": {"type": "string"}
		}
	},
	"required": [
		"pk",
		"index",
		"title",
		"englishTitle",
		"runDuration",
		"setupDuration",
		"runners",
		"commentators",
		"completedChecklist"
	]
}
